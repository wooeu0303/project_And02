<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FFFF" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="149dp"
        android:background="@drawable/line2"/>

    <Button
        android:id="@+id/btn_homepage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_start"
        android:layout_below="@+id/btn_start"
        android:layout_marginTop="30dp"
        android:background="#00ff0000"
        android:text="HomePage"
        android:textColor="#565656"
        android:textStyle="bold" />

    <DigitalClock
        android:id="@+id/digitalClock1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="33dp"
        android:text="DigitalClock"
        android:textSize="30dp" />

    <Button
        android:id="@+id/ibtn_setting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_AroundView"
        android:layout_below="@+id/btn_AroundView"
        android:layout_marginTop="33dp"
        android:background="#00ff0000"
        android:text="setting"
        android:textColor="#565656"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="23dp"
        android:layout_marginTop="18dp"
        android:background="#00ff0000"
        android:text="Start View"
        android:textColor="#565656"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/digitalClock1"
        android:layout_alignTop="@+id/btn_homepage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/aa1" />

    <Button
        android:id="@+id/btn_AroundView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_homepage"
        android:layout_below="@+id/btn_homepage"
        android:layout_marginTop="25dp"
        android:background="#00ff0000"
        android:text="Around Map"
        android:textColor="#565656"
        android:textStyle="bold" />

</RelativeLayout>
